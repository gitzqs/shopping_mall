<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.basic.dao.customer.ICustomerMapper">
	<resultMap id="customerMap" type="customer" >
		<id column="ID" property="id" jdbcType="DECIMAL"/>
		<result column="USER_NAME" property="userName" jdbcType="VARCHAR"/>
		<result column="PASSWORD" property="password" jdbcType="VARCHAR"/>
		<result column="MOBILE" property="mobile" jdbcType="VARCHAR"/>
		<result column="OPEN_ID" property="openId" jdbcType="VARCHAR"/>
		
		<result column="CREATED_TIME" property="createdTime" jdbcType="TIMESTAMP"/>
		
	</resultMap>
	
	<sql id="base_column">
		ID,USER_NAME,PASSWORD,MOBILE,OPEN_ID,CREATED_TIME
	</sql>
	
	<sql id="sql_from">
		FROM CUSTOMER
	</sql>
	
	<sql id="sql_where">
		WHERE 1=1
			<if test="mobile !=null and mobile !=''">
				AND MOBILE = #{mobile}
			</if>
	</sql>
	
	<!-- 根据mobile获取信息 begin -->
	<select id="loadByMobile" parameterType="String" resultMap="customerMap">
		SELECT
		<include refid="base_column"></include>
		<include refid="sql_from"></include>
		<include refid="sql_where"></include>
		LIMIT 1
	</select>
	<!-- 根据mobile获取信息 end -->
	
	<!-- 注册 begin -->
	<insert id="saveP" parameterType="customer">
		INSERT INTO CUSTOMER(USER_NAME,PASSWORD,MOBILE,CREATED_TIME)VALUES(
			#{userName},#{password},#{mobile},#{createdTime}
		)
	</insert>
	<!-- 注册 end -->
	
</mapper>